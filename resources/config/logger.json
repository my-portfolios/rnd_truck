{
    "global": {
        "weblog": true,
        "database": true
    },
    "log4js": {
        "appenders": {
            "default": { 
                "type": "stdout", 
                "layout": { "type": "pattern", "pattern": "%[%d{yyyy-MM-dd hh:mm:ss,SSS} %p %m %]" }
            }
        },
        "categories": { "default": { "appenders": ["default"], "level": "debug" } },
        "pm2": true,
        "pm2InstanceVar": "hubizict_camping_web"
    },
    "extend": {
        "format": "(@file:@line:@column)"
    }
}