<script src="/assets/js/fileUpload/upload.js"></script>

<script>
    $(function() {
        // 장치 분류 가져오기
        $.get('/code/data/list/equipType', function(data) {
            ComboUtility.appendComboData($("[name='codeKey']"), data, 'codeNm', 'codeKey', true);
        });
    });

    function moveToEquipTypeManage() {
		location.href = '/equipment/type/list';
    }
</script>
<form id="equipAddForm" action="/equipment/write/step2" method="post" >
 <div class="board_list"> 
    <table>
        <tr>
            <th>장치 분류</th>
            <td>
                <select name="codeKey" required="required">
                </select>
                <% if(typeof(userInfo) != 'undefined' && userInfo.userType == 'A') { %>
                    <input type="button" onclick="moveToEquipTypeManage();" value="장치 분류 관리" />
                <% } %>
            </td>
        </tr>
    </table>
    <p class="text-center"><input type="submit" class="btn btn-primary" value="다음 단계로" ></p>
</div>
</form>